<article class="row article">
  <div class="span6 columns">
    <h3><a href="/article/{{file}}">{{title}}</a></h3>
    <dl>
    {{#meta}}
      <dt>{{key}}</dt>
      <dd>{{value}}</dd>
    {{/meta}}
    </dl>
  </div>
  
  <div class="span10 columns">
      <section>
      {{{html}}}
      <footer>
        {{>comment}}
      </footer>
    </section>
    
  </div>
</article>
